{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuestTemplate",
  "type": "object",
  "required": [
    "id", "title", "description", "type", "questType", "status", "difficulty", "requirements", "objectives", "dialogue", "rewards"
  ],
  "properties": {
    "id": { "type": "string" },
    "title": { "type": "string" },
    "description": { "type": "string" },
    "type": { "type": "string", "enum": ["CUSTOM", "KILL", "COLLECT", "EXPLORE", "INTERACT", "DIPLOMATIC", "RESOURCE_GATHERING", "TERRITORY_CONTROL"] },
    "questType": { "type": "string", "enum": ["CUSTOM", "KILL", "COLLECT", "EXPLORE", "INTERACT", "DIPLOMATIC", "RESOURCE_GATHERING", "TERRITORY_CONTROL"] },
    "status": { "type": "string", "enum": ["PENDING", "IN_PROGRESS", "COMPLETED", "FAILED", "CANCELLED"] },
    "difficulty": { "type": "integer", "minimum": 1, "maximum": 5 },
    "requirements": {
      "type": "object",
      "required": ["minimumLevel", "minimumReputation"],
      "properties": {
        "minimumLevel": { "type": "integer", "minimum": 0 },
        "minimumReputation": { "type": "integer", "minimum": 0 },
        "items": { "type": "array", "items": { "type": "string" } },
        "abilities": { "type": "array", "items": { "type": "string" } }
      }
    },
    "objectives": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "description", "type"],
        "properties": {
          "id": { "type": "string" },
          "description": { "type": "string" },
          "type": { "type": "string" },
          "target": { "type": "string" },
          "amount": { "type": "integer" },
          "location": { "type": "string" },
          "customData": { "type": "object" },
          "completed": { "type": "boolean" },
          "conditions": {
            "type": "array",
            "items": { "type": "object" }
          }
        }
      }
    },
    "dialogue": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["text", "npcId", "responses"],
        "properties": {
          "text": { "type": "string" },
          "npcId": { "type": "string" },
          "responses": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["text"],
              "properties": {
                "text": { "type": "string" },
                "nextDialogueId": { "type": "string" },
                "condition": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "rewards": {
      "type": "object",
      "required": ["gold", "experience", "items"],
      "properties": {
        "gold": { "type": "integer" },
        "experience": { "type": "integer" },
        "items": { "type": "array", "items": { "type": "string" } },
        "reputation": { "type": "integer" },
        "diplomaticInfluence": { "type": "integer" }
      }
    },
    "location": { "type": ["string", "null"] },
    "customData": { "type": "object" }
  },
  "examples": [
    {
      "id": "main_001",
      "title": "Defend the Village",
      "description": "Protect the village from the bandit attack.",
      "type": "KILL",
      "questType": "KILL",
      "status": "PENDING",
      "difficulty": 3,
      "requirements": { "minimumLevel": 2, "minimumReputation": 10 },
      "objectives": [
        { "id": "obj1", "description": "Defeat 10 bandits", "type": "KILL", "target": "bandit", "amount": 10 }
      ],
      "dialogue": [
        { "text": "Help us!", "npcId": "villager_1", "responses": [ { "text": "I will help." } ] }
      ],
      "rewards": { "gold": 100, "experience": 500, "items": ["sword"] },
      "location": "village_1"
    },
    {
      "id": "side_001",
      "title": "Gather Herbs",
      "description": "Collect 5 healing herbs for the healer.",
      "type": "COLLECT",
      "questType": "COLLECT",
      "status": "PENDING",
      "difficulty": 1,
      "requirements": { "minimumLevel": 1, "minimumReputation": 0 },
      "objectives": [
        { "id": "obj1", "description": "Collect 5 healing herbs", "type": "COLLECT", "target": "herb", "amount": 5 }
      ],
      "dialogue": [
        { "text": "Can you bring me some herbs?", "npcId": "healer_1", "responses": [ { "text": "Sure." } ] }
      ],
      "rewards": { "gold": 20, "experience": 50, "items": ["herb"] },
      "location": "forest_1"
    },
    {
      "id": "faction_001",
      "title": "Sabotage Rival Camp",
      "description": "Disrupt the rival faction's supply lines.",
      "type": "DIPLOMATIC",
      "questType": "DIPLOMATIC",
      "status": "PENDING",
      "difficulty": 4,
      "requirements": { "minimumLevel": 5, "minimumReputation": 20 },
      "objectives": [
        { "id": "obj1", "description": "Destroy 3 supply crates", "type": "CUSTOM", "target": "crate", "amount": 3 }
      ],
      "dialogue": [
        { "text": "We need to weaken our rivals.", "npcId": "faction_leader_1", "responses": [ { "text": "Understood." } ] }
      ],
      "rewards": { "gold": 200, "experience": 1000, "items": ["cloak"], "reputation": 10 },
      "location": "rival_camp"
    }
  ]
} 