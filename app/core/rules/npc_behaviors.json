{
  "personality_system": {
    "traits": {
      "bravery": {
        "description": "Willingness to take risks and face danger",
        "range": [-10, 10],
        "effects": {
          "combat": "modifies morale checks",
          "social": "affects intimidation resistance"
        }
      },
      "loyalty": {
        "description": "Commitment to allies and causes",
        "range": [-10, 10],
        "effects": {
          "combat": "modifies flee chance",
          "social": "affects persuasion difficulty"
        }
      },
      "greed": {
        "description": "Desire for wealth and material gain",
        "range": [-10, 10],
        "effects": {
          "economic": "modifies trade prices",
          "social": "affects bribery effectiveness"
        }
      }
    },
    "motivation_system": {
      "primary_motivations": {
        "wealth": {
          "description": "Driven by material gain",
          "behaviors": ["seeks profitable opportunities", "hoards resources"]
        },
        "power": {
          "description": "Seeks influence and control",
          "behaviors": ["forms alliances", "undermines rivals"]
        },
        "survival": {
          "description": "Focused on self-preservation",
          "behaviors": ["avoids unnecessary risks", "seeks safe havens"]
        }
      },
      "secondary_motivations": {
        "knowledge": {
          "description": "Seeks understanding and information",
          "behaviors": ["collects lore", "shares information strategically"]
        },
        "revenge": {
          "description": "Driven by past grievances",
          "behaviors": ["targets specific enemies", "holds grudges"]
        }
      }
    }
  },
  "social_interaction": {
    "relationship_system": {
      "base_relationship": 0,
      "modifiers": {
        "faction_alignment": "±5 based on alignment match",
        "previous_interactions": "cumulative effect of past encounters",
        "gift_value": "relationship points based on gift value"
      },
      "thresholds": {
        "hostile": -10,
        "unfriendly": -5,
        "neutral": 0,
        "friendly": 5,
        "allied": 10
      }
    },
    "dialogue_system": {
      "response_types": {
        "hostile": {
          "description": "Aggressive or dismissive responses",
          "triggers": ["low relationship", "opposing goals"]
        },
        "neutral": {
          "description": "Professional or indifferent responses",
          "triggers": ["neutral relationship", "no strong opinions"]
        },
        "friendly": {
          "description": "Helpful or cooperative responses",
          "triggers": ["positive relationship", "shared goals"]
        }
      },
      "persuasion_difficulty": {
        "base_dc": 15,
        "modifiers": {
          "relationship": "±5 based on relationship level",
          "request_difficulty": "±5 based on request nature",
          "evidence": "-5 if supporting evidence provided"
        }
      }
    }
  },
  "world_interaction": {
    "travel_behavior": {
      "base_radius": "1d6 miles",
      "modifiers": {
        "adventurous": "+1d6 miles",
        "cautious": "-1d6 miles"
      },
      "destination_preferences": {
        "safe": ["home", "allied settlements"],
        "risky": ["dungeons", "wilderness"],
        "neutral": ["markets", "taverns"]
      }
    },
    "rumor_system": {
      "propagation": {
        "base_chance": 0.25,
        "modifiers": {
          "importance": "±0.1 based on event significance",
          "time_passed": "-0.05 per day",
          "distance": "-0.1 per region"
        }
      },
      "accuracy": {
        "base_accuracy": 0.8,
        "modifiers": {
          "source_reliability": "±0.2 based on source",
          "rumor_age": "-0.1 per week"
        }
      }
    }
  },
  "combat_behavior": {
    "tactical_preferences": {
      "aggressive": {
        "description": "Prefers direct confrontation",
        "behaviors": ["charges enemies", "focuses on damage"]
      },
      "defensive": {
        "description": "Prioritizes survival",
        "behaviors": ["uses cover", "focuses on protection"]
      },
      "tactical": {
        "description": "Uses complex strategies",
        "behaviors": ["flanks enemies", "coordinates with allies"]
      }
    },
    "retreat_behavior": {
      "conditions": {
        "hp_threshold": 0.25,
        "ally_ratio": 0.5,
        "morale_check": "d100 <= flee_chance"
      },
      "execution": {
        "method": "disengage and move away",
        "regroup_point": "nearest safe location",
        "pursuit_response": "continue fleeing or make stand"
      }
    }
  }
} 