{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ReviewTemplate",
  "description": "Schema for defining structured code review templates",
  "type": "object",
  "required": ["name", "version", "sections"],
  "properties": {
    "id": {
      "type": "integer",
      "description": "Unique identifier for the template"
    },
    "name": {
      "type": "string",
      "description": "Unique name for the template",
      "minLength": 1,
      "maxLength": 255
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the template's purpose and usage"
    },
    "version": {
      "type": "string",
      "description": "Version of the template (semver recommended)",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "category": {
      "type": "string",
      "description": "Category of review this template is for",
      "enum": ["code", "design", "security", "performance", "documentation", "general"]
    },
    "sections": {
      "type": "array",
      "description": "List of sections containing review questions",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "questions"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the section",
            "minLength": 1
          },
          "description": {
            "type": "string",
            "description": "Description of what this section covers"
          },
          "questions": {
            "type": "array",
            "description": "List of questions in this section",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["text", "type"],
              "properties": {
                "text": {
                  "type": "string",
                  "description": "The question text",
                  "minLength": 1
                },
                "type": {
                  "type": "string",
                  "description": "Type of response expected for this question",
                  "enum": ["text", "rating", "boolean", "choice"]
                },
                "required": {
                  "type": "boolean",
                  "description": "Whether this question must be answered",
                  "default": true
                },
                "options": {
                  "type": "array",
                  "description": "Available options for choice questions",
                  "items": {
                    "type": "string"
                  }
                },
                "metadata": {
                  "type": "object",
                  "description": "Additional metadata for the question",
                  "properties": {
                    "hint": {
                      "type": "string",
                      "description": "Hint text to help answer the question"
                    },
                    "ratingScale": {
                      "type": "object",
                      "description": "Scale definition for rating questions",
                      "properties": {
                        "min": {
                          "type": "integer",
                          "default": 1
                        },
                        "max": {
                          "type": "integer",
                          "default": 5
                        },
                        "labels": {
                          "type": "object",
                          "description": "Labels for rating values",
                          "patternProperties": {
                            "^[0-9]+$": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional template metadata",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "recommendedFrequency": {
          "type": "string",
          "description": "How often this review should be conducted",
          "enum": ["once", "sprint", "monthly", "quarterly", "annually"]
        },
        "estimatedDuration": {
          "type": "string",
          "description": "Estimated time to complete the review"
        }
      }
    },
    "is_active": {
      "type": "boolean",
      "description": "Whether this template is currently active",
      "default": true
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this template was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "When this template was last updated"
    }
  },
  "examples": [
    {
      "name": "Code Quality Review",
      "description": "Standard template for reviewing code quality and best practices",
      "version": "1.0.0",
      "category": "code",
      "sections": [
        {
          "title": "Code Structure",
          "description": "Evaluate the overall code organization and structure",
          "questions": [
            {
              "text": "Is the code well-organized and easy to follow?",
              "type": "rating",
              "required": true,
              "metadata": {
                "hint": "Consider file organization, function length, and code grouping",
                "ratingScale": {
                  "min": 1,
                  "max": 5,
                  "labels": {
                    "1": "Poor",
                    "3": "Acceptable",
                    "5": "Excellent"
                  }
                }
              }
            },
            {
              "text": "Are there any code smells that need to be addressed?",
              "type": "text",
              "required": true,
              "metadata": {
                "hint": "Look for duplicate code, long methods, or complex conditionals"
              }
            }
          ]
        }
      ],
      "metadata": {
        "tags": ["code-quality", "best-practices"],
        "recommendedFrequency": "sprint",
        "estimatedDuration": "30 minutes"
      }
    }
  ]
} 