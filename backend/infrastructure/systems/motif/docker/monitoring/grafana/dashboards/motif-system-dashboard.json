{
  "dashboard": {
    "id": null,
    "title": "Motif System Overview",
    "tags": ["motif", "narrative", "ai"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h", "2h", "1d"],
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "refresh": "30s",
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "motif_system_health",
            "legendFormat": "Health Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "UNHEALTHY",
                    "color": "red"
                  },
                  "1": {
                    "text": "HEALTHY",
                    "color": "green"
                  }
                },
                "type": "value"
              }
            ],
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": null
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Total Motifs",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(motif_active_total)",
            "legendFormat": "Active Motifs",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Request Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(motif_requests_total[5m])",
            "legendFormat": "Requests/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "reqps"
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(motif_requests_total{status_code=~\"5..\"}[5m]) / rate(motif_requests_total[5m]) * 100",
            "legendFormat": "Error %",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "unit": "percent",
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": null
                },
                {
                  "color": "yellow",
                  "value": 1
                },
                {
                  "color": "red",
                  "value": 5
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 3,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 5,
        "title": "API Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(motif_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(motif_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "B"
          },
          {
            "expr": "histogram_quantile(0.99, rate(motif_request_duration_seconds_bucket[5m]))",
            "legendFormat": "99th percentile",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time",
            "unit": "s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 3
        }
      },
      {
        "id": 6,
        "title": "Motifs by Scope",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (scope) (motif_active_total)",
            "legendFormat": "{{scope}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 3
        }
      },
      {
        "id": 7,
        "title": "Database Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(motif_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "rate(motif_db_operations_total[5m])",
            "legendFormat": "Query Rate",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Duration / Rate",
            "unit": "s"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 11
        }
      },
      {
        "id": 8,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(motif_cache_operations_total{result=\"hit\"}[5m]) / rate(motif_cache_operations_total[5m]) * 100",
            "legendFormat": "Hit Rate %",
            "refId": "A"
          },
          {
            "expr": "rate(motif_cache_operations_total[5m])",
            "legendFormat": "Operations/sec",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Hit Rate / Ops",
            "unit": "percent"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 11
        }
      },
      {
        "id": 9,
        "title": "Motif Evolution Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(motif_evolution_total[5m])",
            "legendFormat": "{{trigger_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Evolutions/sec",
            "unit": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 19
        }
      },
      {
        "id": 10,
        "title": "Active Conflicts",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (conflict_type) (motif_conflicts_active)",
            "legendFormat": "{{conflict_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Active Conflicts",
            "unit": "short"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 19
        }
      },
      {
        "id": 11,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "motif_memory_usage_bytes",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Memory Usage",
            "unit": "bytes"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 27
        }
      },
      {
        "id": 12,
        "title": "Error Breakdown",
        "type": "table",
        "targets": [
          {
            "expr": "sum by (error_type, component) (rate(motif_errors_total[5m]))",
            "legendFormat": "{{error_type}} - {{component}}",
            "refId": "A",
            "format": "table"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {
                "Time": true,
                "__name__": true,
                "job": true,
                "instance": true
              },
              "indexByName": {},
              "renameByName": {
                "error_type": "Error Type",
                "component": "Component",
                "Value": "Rate/sec"
              }
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 27
        }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(motif_requests_total, instance)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        },
        {
          "name": "endpoint",
          "type": "query", 
          "query": "label_values(motif_requests_total, endpoint)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(motif_system_info[1h])",
          "textFormat": "Deployment",
          "iconColor": "blue"
        }
      ]
    }
  },
  "overwrite": true
} 