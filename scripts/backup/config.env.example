# Example configuration for backup scripts
# Copy to config.env and fill in actual values. Do NOT commit secrets.

# PostgreSQL connection
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGDATABASE=your_database

# Backup storage
BACKUP_DIR=/path/to/backup/storage

# WAL archive directory (for incremental backups)
PGWAL_DIR=/var/lib/postgresql/data/pg_wal

# Encryption key (set as environment variable, do not store in file)
# ENCRYPTION_KEY=your-strong-key

# File system backup
FILE_SRC_DIRS="/etc/myapp /var/www/myapp/uploads"
FILE_BACKUP_DIR=/path/to/file/backup/storage
FILE_EXCLUDES="*.tmp,cache,*.log"

# Notification settings
NOTIFY_EMAIL=alerts@example.com
NOTIFY_SLACK_WEBHOOK=https://hooks.slack.com/services/your/webhook/url

# Retention policy
RETENTION_DAYS=30

# Security: Set ENCRYPTION_KEY in your shell or CI/CD environment, not in this file.
